{
  "name": "md-server",
  "version": "1.1.1",
  "description": "Simple server for serving markdown files within a folder and nested subfolders from a given specified directory",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node load-md-files.js",
    "dev": "node --watch load-md-files.js",
    "predev": "npx kill-port 3011",
    "all": "pnpm i"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "highlight.js": "^11.11.1",
    "marked": "^11.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21"
  }
}